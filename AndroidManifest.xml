<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="cz.expaobserver"
      android:versionCode="1"
      android:versionName="2014.0">
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-feature android:name="android.hardware.sensor.accelerometer"
      android:required="true" />
    <uses-feature android:name="android.hardware.sensor.compass"
      android:required="true" />
    <application android:name="ObserverApplication"
                 android:icon="@drawable/ic_launcher"
                 android:label="@string/app_name">
        <activity android:name="ObserverActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="RecordsListActivity"
                  android:label="@string/records_list">
        </activity>
        <activity android:name="SettingsActivity"
                  android:label="@string/settings">
        </activity>
    </application>
</manifest>
